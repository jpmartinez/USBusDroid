<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MyTickets.MyTicketsActivity">

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/unusedBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/unused_ticket" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sin Utilizar"
        android:id="@+id/unusedTV"
        android:layout_below="@+id/unusedBtn"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="-30dp" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/usedBtn"
        android:layout_below="@+id/unusedTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/used_ticket" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Utilizados"
        android:id="@+id/usedTV"
        android:layout_below="@+id/usedBtn"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="-30dp" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/bookingBtn"
        android:layout_below="@+id/usedBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ticket_booking"
        android:scaleType="fitXY"
        android:background="@null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reservas"
        android:id="@+id/bookingTV"
        android:layout_below="@+id/bookingBtn"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="-30dp" />

</RelativeLayout>
